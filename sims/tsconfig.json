{
  "include": ["./src/**/*"],
  "exclude": [],
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2021", "DOM"],
    "module": "es2022",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "watch": true,
    "skipLibCheck": true
    //"extendedDiagnostics": true
  },
  "watchOptions": {
    "watchDirectory": "useFsEvents",
    "excludeDirectories": ["src/vendor"]
  }
}
