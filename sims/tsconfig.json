{
  "include": ["./src/**/*"],
  "exclude": [],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2016", "DOM"],
    "module": "ES6",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "extendedDiagnostics": true
  }
}
